<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bordes"
    android:orientation="vertical"
    tools:context=".Dos" >

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bordes"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:textSize="20dp"
    android:textColor="@color/colorPrimary_text"
    android:hint="@string/lbl_Nombre"
    android:id="@+id/et_resultado1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary_texto"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_credit_card_24">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:hint="@string/lbl_Numero_tarjeta"
                android:id="@+id/et_resultado2"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:id="@+id/et_resultado3"
                android:hint="@string/lbl_Codigo"
                android:textSize="14dp"/>

        </LinearLayout>




    </LinearLayout>
    <TextView
        android:id="@+id/hecho_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:textSize="25dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorPrimary_text"
        android:text="           registro exitoso"
        android:textColor="#FFFFF0" />




</LinearLayout>